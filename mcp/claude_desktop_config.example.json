{
  "mcpServers": {
    "mcpbla": {
      "description": "Start MCPBLA locally (FastAPI HTTP tools on 127.0.0.1:8000).",
      "command": "D:\\MCPBLA\\.venv\\Scripts\\python.exe",
      "args": [
        "-m",
        "mcpbla.server.mcp_server"
      ],
      "cwd": "D:\\MCPBLA",
      "env": {
        "MCP_HOST": "127.0.0.1",
        "MCP_PORT": "8000",
        "MCP_WORKSPACE": "D:\\MCPBLA",
        "MCPBLA_LOG_LEVEL": "info",
        "PYTHONUTF8": "1"
      }
    }
  }
}
