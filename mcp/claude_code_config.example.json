{
  "mcpServers": {
    "mcpbla": {
      "description": "Attach Claude Code to a running MCP Blender Orchestrator over HTTP.",
      "command": "python",
      "args": [
        "-m",
        "scripts.start_mcp_server"
      ],
      "env": {
        "MCP_PORT": "8000",
        "MCP_HOST": "127.0.0.1",
        "MCP_WORKSPACE": "D:/MCPBLA"
      },
      "transport": {
        "type": "http",
        "url": "http://127.0.0.1:8000"
      },
      "cwd": "D:/MCPBLA",
      "timeoutSeconds": 10
    }
  }
}
